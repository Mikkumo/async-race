{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2015",
    
    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    
    /* Emit */
    "outDir": "./dist",
    "sourceMap": true,
    
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    
    /* Completeness */
    "skipLibCheck": true
  }
}